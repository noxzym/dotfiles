{
    "layer": "top",
    "margin": "4px",
    "modules-left": [
        "custom/icon",
        "hyprland/workspaces"
    ],
    "modules-center": ["hyprland/window"],
    "modules-right": [
        "network",
        "custom/divider",
        "cpu",
        "custom/divider",
        "memory",
        "custom/divider",
        "clock"
    ],
    "custom/icon": {
        "format": "{icon}",
        "format-icons": ["ó°£‡"]
    },
    "custom/divider": {
        "format": "|"
    },
    "hyprland/workspaces": {
        "persistent-workspaces": {
            "*": 9
        }
    },
    "hyprland/window": {
        "max-length": 50
    },
    "network": {
        "format": "{ifname}",
        "tooltip": false
    },
    "cpu": {
        "format": "{usage}%",
        "tooltip": false
    },
    "memory": {
        "format": "{used:0.1f}G/{total:0.1f}G"
    },
    "clock": {
        "interval": 1,
        "format": "{:%A, %d %B %Y - %R}"
    }
}